page{
  height: 100%;
}
.pyg_category{
  height: 100%;
}
.cates_container{
  /* less中使用calc需要注意 */
  height: calc(100vh - 90rpx);
  display: flex;
}
.cates_container .left_menu{
  flex: 2;
}
.cates_container .left_menu .menu_item{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates_container .right_list{
  flex:5;
  /* background-color: aquamarine; */
}

.cates_container .right_list .goods_title{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}
.cates_container .right_list .goods_title .delt{
  color: #ccc;
  padding: 0 10rpx;
}
.cates_container .right_list .goods_title .title{
  font-size: 30rpx;
}
/* .cates_container .right_list .good_group{
  display: flex;
} */
.cates_container .right_list .goods_list{
  display: flex;
  flex-wrap: wrap;
}
.cates_container .right_list .goods_list navigator{
  /* display: flex; */
  /* justify-content: space-around; */
  /* float: left; */
  /* word-wrap: break-word; */
  width: 33.33%;
  text-align: center;
}
.cates_container .right_list .goods_list navigator image{
  width: 50%;
}
.active{
  color: var(--themeColor);
  border-left: 2px solid currentColor;
  background-color:rgb(255, 255, 252);
}