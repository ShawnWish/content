page{
  padding-bottom: 90rpx;
}
.detail_index{
  margin: 0 10rpx;
}
.detail_index swiper{
  height: 60vw;
  text-align: center;
}

.detail_index swiper swiper-item image{
  width: 60%;
}
.detail_name{
  display: flex;
  /* flex-direction: column; */
  justify-content: center;
  align-items: space-around;
  border-bottom: 4px solid #ccc;
  /* padding: 10rpx 0; */
  padding-bottom: 10rpx;
}
.detail_name .detail_text{
  flex: 5;
}
.detail_name .detail_right{
  margin-top: 40rpx;
  flex: 1;
  border-left: 1px solid #ccc;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.detail_name .detail_price{
  font-weight: bold;
  font-size: 32rpx;
  color: var(--themeColor);
  padding: 0 15rpx;
}
.detail_name .detail_title{
  color: #666;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  font-size: 26rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.detail_info_title{
  color: var(--themeColor);
  padding: 15rpx;
  font-weight: bold;
  font-size: 32rpx;
  border-bottom: 2px solid #666;
}
.bottom_detail{
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
  height: 90rpx;
  width: 100%;
  display: flex;
}
.bottom_detail .concat_btn,.share_btn,.cart_btn{
  flex: 1;
  font-size: 24rpx;
  /* text-align: center; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;
  position: relative;
}
.bottom_detail .btn_addCart,.btn_buy{
  flex: 2;
  /* text-align: center; */
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 600;
  font-size: 30rpx;
  color: #fff;
}
.bottom_detail .btn_addCart{
  background-color: #FFA500;
}
.bottom_detail .btn_buy{
  background-color: #EB4450;
}
.concat_btn button,
.share_btn button{
  flex: 1;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}